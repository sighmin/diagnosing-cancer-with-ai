#!/usr/bin/env ruby

require_relative '../lib/intelligence'
include Intelligence


nn_problem_config = {
  type: :nn_training_problem,
  objective: :minimization,
  dataset: {
    file: 'data/breast-cancer.csv',
    training: 0.64
  },
  neural_network: {
    layers: [{
      size: 30,
      bias: true,
      function: nil
     },{
      size: 7,
      bias: true,
      function: :sigmoid
     },{
      size: 1,
      bias: false,
      function: :sigmoid
     }]
  },
  precision: 0.25
}

simulator = Sims::Simulator.new do
  simulation type: :simulation, runs: 1, resolution: 1
  algorithm  type: :pso, iterations: 100, population: 15, dimensions: 225, domain: (-0.1..0.1)
  problem    nn_problem_config
end

simulator.run

